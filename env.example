# MongoDB Configuration
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=your_secure_password
MONGO_DATABASE=eyes_app
MONGODB_URI=mongodb://root:your_secure_password@mongodb:27017/eyes_app?authSource=admin

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Port Configuration
PORT=5000
BACKEND_PORT=5001
FRONTEND_PORT=80

# Backend URL for frontend (set this to your backend service URL in production)
BACKEND_URL=http://backend:5000

# For external MongoDB (e.g., MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/eyes_app?retryWrites=true&w=majority 