{
  "name": "Congressional App",
  "description": "A full-stack congressional app with React frontend and Node.js backend",
  "repository": "https://github.com/yourusername/congressional_app",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "express", "react", "mongodb"],
  "env": {
    "NODE_ENV": {
      "description": "Environment setting",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT tokens",
      "generator": "secret"
    },
    "JWT_EXPIRES_IN": {
      "description": "JWT token expiration time",
      "value": "90d"
    },
    "JWT_COOKIE_EXPIRES_IN": {
      "description": "JWT cookie expiration time",
      "value": "90"
    },
    "MONGODB_URI": {
      "description": "MongoDB connection string",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "mongolab:sandbox"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
} 